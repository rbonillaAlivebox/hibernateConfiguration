	</dependencies>
	
	<profiles>
		<!-- Prod - START -->
		<profile>
			<id>preqa</id>
			<activation>
				<property>
					<name>env</name>
					<value>preqa-load</value>
				</property>
			</activation>
			
			<build>
				<plugins>
		
					<!-- hibernate plugin - START -->
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>hibernate3-maven-plugin</artifactId>
						<version>2.2</version>
						<configuration>
							<componentProperties>
								<drop>true</drop>
								<configurationfile>/src/test/resources/hibernate3ddl/hibernateddl.oracle.cfg.xml</configurationfile>
								<outputDirectory>target/ddl/</outputDirectory>
								<outputfilename>oracle-schema.sql</outputfilename>
							</componentProperties>
						</configuration>
					</plugin>
					<!-- hibernate plugin - END -->
					
					<!-- dbunit plugin - START -->
					<plugin>
				        <groupId>org.codehaus.mojo</groupId>
				        <artifactId>dbunit-maven-plugin</artifactId>
				        <version>1.0-beta-3</version>
				        
				        <dependencies>
				          <dependency>
								<groupId>com.oracle</groupId>
								<artifactId>ojdbc</artifactId>
								<version>14</version>
							</dependency>
				        </dependencies>
				       
				        <configuration>
				          <driver>oracle.jdbc.OracleDriver</driver>
				          <url>jdbc:oracle:thin:@corp-e94feaa283:1521:alivebox</url>
				          <username>sicome</username>
				          <password>sicome</password>
				        </configuration>
				        
				        <executions>
				          <execution>
				            <phase>process-classes</phase>
				            <goals>
				              <goal>operation</goal>
				            </goals>
				            <configuration>
				              <type>CLEAN_INSERT</type>
				              <src>src/test/resources/data/sample-data.xml</src>
				            </configuration>
				          </execution>
				        </executions>
				        
			      	</plugin>
					<!-- dbunit plugin - END -->
		
				</plugins>
			
			</build>
			
		</profile>
		<!-- Prod - END -->
	</profiles>
	
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<org.springframework.version>3.0.6.RELEASE</org.springframework.version>
	</properties>

</project>